{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "module": "commonjs",
    "target": "es5",
    "lib": ["esnext"],
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ],
  "files": [
    "src/declarations.d.ts"
  ]
}
